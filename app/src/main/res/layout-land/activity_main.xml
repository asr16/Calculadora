<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <TextView
                android:layout_width="0dp"
                android:id="@+id/textView"
                android:layout_height="55dp"
                android:textSize="45sp"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:gravity="right" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="sin"
                android:layout_width="0dp"
                android:id="@+id/bsin"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:textSize="24sp"
                android:onClick="seno" />

            <Button
                android:text="CE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bresetear"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/blimpiar"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="DEL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bborrar"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="÷"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bdividir"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="cos"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/bcos"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:textSize="24sp"
                android:onClick="coseno" />

            <Button
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="×"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bmultipl"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="tan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/btan"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:textSize="24sp"
                android:onClick="tangente" />

            <Button
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/brestar"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="√"
                android:layout_width="0dp"
                android:id="@+id/braiz"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:textSize="24sp"
                android:onClick="raiz" />

            <Button
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bsumar"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="%"
                android:layout_width="0dp"
                android:id="@+id/bporcentaje"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@android:color/holo_green_dark"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp"
                android:onClick="porciento" />

            <Button
                android:text="+/-"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bmasmenos"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button0"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text=","
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bpunto"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

            <Button
                android:text="="
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bigual"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>
</LinearLayout>